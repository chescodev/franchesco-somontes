  description="Contrata a Franchesco para crear tu aplicación"
>
  <main class="px-6">
    <SectionContainer id="" class="py-16 md:py-36">
      <Hero />
    </SectionContainer>
    <SectionContainer id="experience">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <BriefcaseIcon class="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer class="mt-16">
      <NavLink />
    </SectionContainer>
    <SectionContainer id="projects" class="mt-16">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <SectionContainer class="mt-16">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <StarIcon class="size-7" />
        Skills
      </h2>
      <Skills />
    </SectionContainer>

